@page
@model TwoFactorAuthenticationModel
@{
    Layout = "_Layout.cshtml";
}
@{
    ViewData["Title"] = "To-Faktor Godkendelse (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <h4>@ViewData["Title"]</h4>
        <hr />
    </div>
</div>

@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="row">
            <div class="col-md-6 alert alert-danger">
                <strong>Du har ikke flere gendannelses koder tilbage!</strong>
                <p>Du skal <a asp-page="./GenerateRecoveryCodes">generere et nyt sæt af gendannelses koder her</a> før du kan logge ind via gendannelses koder!</p>
            </div>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="row">
            <div class="col-md-6 alert alert-danger">
                <strong>Du har kun en gendannelses kode tilbage!.</strong>
                <p>Du kan <a asp-page="./GenerateRecoveryCodes">generere et nyt sæt koder her.</a>.</p>
            </div>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="row">
            <div class="col-md-6 alert alert-warning">
                <strong>Du har @Model.RecoveryCodesLeft gendannelses koder tilbage.</strong>
                <p>Du kan <a asp-page="./GenerateRecoveryCodes">generere et nyt sæt af gendannelses koder her.</a>.</p>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            if (Model.IsMachineRemembered)
            {
            <form method="post" style="display: inline-block">
                <button type="submit" class="btn btn-primary">Glem browser</button>
            </form>
            }

            <a asp-page="./Disable2fa" class="btn btn-primary">Deaktiver 2FA</a>
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Nulstil gendannelses koder</a>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h5>Godkendelses App</h5>
        <hr />
    </div>
</div>
@if (!Model.HasAuthenticator)
{
    <div class="row">
        <div class="col-md-6">
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Tilføj Godkendelses App</a>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3 text-md-center">
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Opsæt App</a>
        </div>
        <div class="col-md-3 text-md-center">
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">Nulstil App</a>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}